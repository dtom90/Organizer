{
  "name": "produc-dev",
  "description": "An app for productive developers",
  "homepage": "https://github.com/dtom90/Produc-dev",
  "repository": "https://github.com/dtom90/Produc-dev",
  "author": {
    "name": "David Thomason",
    "url": "https://davidthomason.com/"
  },
  "private": true,
  "version": "0.3.0-beta",
  "scripts": {
    "web:dev": "vue-cli-service serve",
    "web:build": "vue-cli-service build --dest dist_web",
    "web:serve": "node web.js",
    "web:prod": "yarn run web:build && yarn run web:serve",
    
    "gh_pages:build": "vue-cli-service build --mode gh_pages --dest dist_gh_pages",
    "gh_pages:serve": "BASE_URL=/Produc-dev/ node web.js",
    "gh_pages:prod": "yarn run gh_pages:build && yarn run gh_pages:serve",
    
    "electron:dev": "vue-cli-service electron:serve",
    "electron:build": "vue-cli-service build --mode electron --dest dist_electron/build",
    "electron:serve": "electron electron.js",
    "electron:prod": "yarn run electron:build && yarn run electron:serve",
    "electron:pack": "vue-cli-service electron:build",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    
    "audit:critical": "yarn audit --level high || test $? -lt 16",
    
    "lint": "vue-cli-service lint",
    "lint:fix": "vue-cli-service lint --fix",
    
    "test:unit": "vue-cli-service test:unit",
    
    "test:e2e:dev": "testcafe chrome tests/e2e --selector-timeout 3000 --app \"yarn run web:dev\"",
    "test:e2e:prod": "yarn run gh_pages:build && PORT=5000 BASE_URL=/Produc-dev/ testcafe chrome:headless tests/e2e -c 3 --selector-timeout 3000 --app \"yarn run gh_pages:serve\"",
    
    "test": "yarn audit:critical && yarn run lint && yarn run test:unit && yarn run test:e2e:prod"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.19",
    "@fortawesome/free-solid-svg-icons": "^5.9.0",
    "@fortawesome/vue-fontawesome": "^0.1.6",
    "bootstrap": "^4.3.1",
    "chart.js": "^2.8.0",
    "chartjs-plugin-datalabels": "^0.6.0",
    "color-manager": "https://github.com/dtom90/color-manager",
    "dompurify": "^2.0.7",
    "humanize-duration": "^3.21.0",
    "jquery": "^3.4.1",
    "marked": "^0.7.0",
    "moment": "^2.24.0",
    "sass": "^1.21.0",
    "sass-loader": "^7.1.0",
    "vue": "^2.6.10",
    "vue-chartjs": "^3.4.2",
    "vue-color": "^2.7.0",
    "vuedraggable": "^2.23.0",
    "vuex": "^3.1.1",
    "vuex-persist": "^2.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.9.2",
    "@vue/cli-plugin-eslint": "^3.9.2",
    "@vue/cli-plugin-unit-jest": "^3.12.1",
    "@vue/cli-service": "^3.9.3",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "electron": "^5.0.6",
    "electron-notarize": "^0.1.1",
    "eslint": "^6.5.1",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.0",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "eslint-plugin-vue": "^5.2.3",
    "express": "latest",
    "testcafe": "^1.3.3",
    "vue-cli-plugin-electron-builder": "^1.4.0",
    "vue-template-compiler": "^2.6.7",
    "dotenv": "latest"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "main": "background.js"
}
